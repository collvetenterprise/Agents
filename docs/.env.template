# Environment Variables for Access Management
# Copy this file to .env and fill in your values

# Azure DevOps Configuration
AZURE_DEVOPS_PAT=your-personal-access-token-here
AZURE_DEVOPS_ORGANIZATION=your-organization-name
AZURE_DEVOPS_PROJECT=your-project-name

# Microsoft Partner Network Configuration
MPN_TENANT_ID=your-tenant-id-here
MPN_CLIENT_ID=your-client-id-here
MPN_CLIENT_SECRET=your-client-secret-here
MPN_PARTNER_ID=your-partner-id-here

# Azure Key Vault (Optional - for secure credential storage)
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_KEYVAULT_TENANT_ID=your-tenant-id-here
AZURE_KEYVAULT_CLIENT_ID=your-client-id-here
AZURE_KEYVAULT_CLIENT_SECRET=your-client-secret-here

# Audit Configuration
AUDIT_LOG_LEVEL=info
AUDIT_LOG_DESTINATION=console

# Security Configuration
TOKEN_ROTATION_ENABLED=true
TOKEN_ROTATION_INTERVAL_DAYS=90
REQUIRE_MFA=false
